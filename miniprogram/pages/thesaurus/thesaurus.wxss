/* miniprogram/pages/thesaurus/thesaurus.wxss */
page {
  background: #dddeef;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin: 60rpx 0 120rpx;
}

.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.background {
  width: 100%;
  height: 120%;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: -1;
}

.userinfo {
  box-sizing: border-box;
  width: 670rpx;
  height: 210rpx;
  padding-left: 60rpx;
  border: 1px solid rgb(209, 203, 203);
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.option-menu {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
}

.grid-menu {
  margin-right: 75rpx;
}