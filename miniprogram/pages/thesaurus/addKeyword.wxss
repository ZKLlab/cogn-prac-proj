/* miniprogram/pages/thesaurus/addKeyword.wxss */
page {
  background: #dddeef;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin: 60rpx 0 120rpx;
}

.background {
  width: 100%;
  height: 120%;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: -1;
}

.keywordInput{
  height: 100rpx;
  width: 600rpx;
  border-radius: 15rpx;
  display: flex;
  flex-direction: row;
  padding-left: 50rpx;
  margin: 50rpx 50rpx;
  border: 1px solid rgb(209, 203, 203);
  background-color: aliceblue;
  align-items: center;
}

.option-menu {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
}

.grid-menu {
  margin-right: 75rpx;
}